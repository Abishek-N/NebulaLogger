<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Profile_name_is_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(OverrideType__c, &apos;Profile&apos;),
    ISBLANK(ProfileName__c)
)</errorConditionFormula>
    <errorDisplayField>ProfileName__c</errorDisplayField>
    <errorMessage>Profile name is required for override type = &apos;Profile&apos;</errorMessage>
</ValidationRule>
